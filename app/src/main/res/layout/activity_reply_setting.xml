<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6FA">

    <com.example.panwest.UI.Widgets.NavigationView
        android:id="@+id/setting_Navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/string_setting_reply"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSky"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorSky"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/reply_setting_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="@string/string_setting_reply_edit_hint"
            android:gravity="top|left"
            tools:ignore="RtlHardcoded"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/reply_setting_enter_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="@string/string_setting_reply"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            tools:ignore="RtlHardcoded"/>
    </LinearLayout>

</LinearLayout>



