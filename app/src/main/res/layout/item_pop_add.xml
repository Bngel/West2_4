<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/add_popbutton_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_upload"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/type_upload_small"
        android:padding="15dp"
        android:background="@android:color/transparent"/>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:background="@color/colorSky"
        android:layout_gravity="right"/>

    <Button
        android:id="@+id/add_popbutton_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_dir"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/type_dir_small"
        android:padding="15dp"
        android:background="@android:color/transparent"/>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:background="@color/colorSky"
        android:layout_gravity="right"/>
</LinearLayout>